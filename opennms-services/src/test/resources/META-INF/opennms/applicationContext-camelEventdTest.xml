<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
    ">

	<!--  
	<bean id="properties" class="org.apache.camel.component.properties.PropertiesComponent">
        <property name="location" value="classpath:camel-eventd-test.properties"/>
    </bean>
    -->
    
	<bean id="eventHandler" class="org.opennms.netmgt.eventd.camel.MockCamelBroadcastEventHandler"/>

	<bean id="camelReceiver" class="org.opennms.netmgt.eventd.camel.CamelEventReceiver">
		<property name="eventHandlers">
	      <list>
	        <ref local="eventHandler"/>
	      </list>
	    </property>
    </bean>

	<bean id="camelBroadcaster" class="org.opennms.netmgt.eventd.camel.CamelEventBroadcaster"/>

</beans>
